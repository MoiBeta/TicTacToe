<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.triqui.tictactoe">

    <application
        android:name="com.triqui.tictactoe.app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_tictactoe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_tictactoe_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TicTacToe">
        <activity
            android:name="com.triqui.tictactoe.ui.RankingActivity"
            android:exported="true" />
        <activity
            android:name="com.triqui.tictactoe.ui.GameActivity"
            android:exported="true"
            android:label="@string/title_activity_game"
            android:theme="@style/Theme.TicTacToe.NoActionBar" />
        <activity
            android:name="com.triqui.tictactoe.ui.FindGameActivity"
            android:exported="true" />
        <activity
            android:name="com.triqui.tictactoe.ui.RegistroActivity"
            android:exported="true" />
        <activity
            android:name="com.triqui.tictactoe.ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>